@model IEnumerable<MovieRental.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>
<p>
        @Html.ActionLink("Create New", "Save","Customers", null , new { @class = "btn btn-primary" })
    </p>
@if (!Model.Any())
{
    <p>No customers till now</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Membership Type</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Customers", new { id = item.Id }, null)
                </td>
                <td>@item.MembershipType.Name</td>
                <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
            </tr>
        }

    </table>

}


