@model IEnumerable<MovieRental.Models.Movie>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>
<table id="movies" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Genre</th>

        </tr>
    </thead>

    <tbody>
    </tbody>

</table>

@section scripts
{
    <script>

        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                        
                    },
                    {
                        data: "genre.name"
                    },
                    
                ]

            });


            
        });

    </script>

}
